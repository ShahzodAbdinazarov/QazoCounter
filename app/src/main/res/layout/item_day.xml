<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="NestedWeights">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mv_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/bg"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:strokeColor="@color/textColor"
        app:strokeWidth="1dp">

        <LinearLayout
            android:id="@+id/bn_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingVertical="8dp">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:paddingHorizontal="16dp"
                android:paddingVertical="4dp"
                android:text="@string/app_name"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <Space
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="24dp"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:id="@+id/bg_fajr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gr_yet">

                        <ImageButton
                            android:id="@+id/iv_fajr"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:background="?selectableItemBackground"
                            android:padding="8dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/fajr"
                            app:tint="@color/white"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <Space
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="24dp"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:id="@+id/bg_dhuhr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gr_yet">

                        <ImageButton
                            android:id="@+id/iv_dhuhr"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:background="?selectableItemBackground"
                            android:padding="8dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/dhuhr"
                            app:tint="@color/white"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <Space
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="24dp"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:id="@+id/bg_asr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gr_yet">

                        <ImageButton
                            android:id="@+id/iv_asr"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:background="?selectableItemBackground"
                            android:padding="8dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/asr"
                            app:tint="@color/white"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <Space
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="24dp"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:id="@+id/bg_maghrib"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gr_yet">

                        <ImageButton
                            android:id="@+id/iv_maghrib"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:background="?selectableItemBackground"
                            android:padding="8dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/maghrib"
                            app:tint="@color/white"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <Space
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="24dp"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:id="@+id/bg_isha"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gr_yet">

                        <ImageButton
                            android:id="@+id/iv_isha"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:background="?selectableItemBackground"
                            android:padding="8dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/isha"
                            app:tint="@color/white"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <Space
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>