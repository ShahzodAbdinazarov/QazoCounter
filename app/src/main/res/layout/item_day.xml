<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingVertical="60dp"
    tools:ignore="NestedWeights">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="40dp"
        app:cardBackgroundColor="@color/bg"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:strokeColor="@color/textColor"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/bg"
                    app:cardCornerRadius="100dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/textColor"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:paddingHorizontal="20dp"
                        android:textColor="@color/textColor"
                        android:textSize="16sp" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_bold"
                    android:paddingHorizontal="20dp"
                    android:text="@string/fajr"
                    android:textColor="@color/textColor"
                    android:textSize="24sp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="24dp"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:id="@+id/bg_fajr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gr_yet">

                        <TextView
                            android:id="@+id/tv_fajr"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="?selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:fontFamily="@font/roboto_semi_bold"
                            android:gravity="center"
                            android:paddingHorizontal="20dp"
                            android:text="@string/yet"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/textColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_bold"
                    android:paddingHorizontal="20dp"
                    android:text="@string/dhuhr"
                    android:textColor="@color/textColor"
                    android:textSize="24sp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="24dp"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:id="@+id/bg_dhuhr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gr_yet">

                        <TextView
                            android:id="@+id/tv_dhuhr"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="?selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:fontFamily="@font/roboto_semi_bold"
                            android:gravity="center"
                            android:paddingHorizontal="20dp"
                            android:text="@string/yet"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/textColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_bold"
                    android:paddingHorizontal="20dp"
                    android:text="@string/asr"
                    android:textColor="@color/textColor"
                    android:textSize="24sp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="24dp"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:id="@+id/bg_asr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gr_yet">

                        <TextView
                            android:id="@+id/tv_asr"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="?selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:fontFamily="@font/roboto_semi_bold"
                            android:gravity="center"
                            android:paddingHorizontal="20dp"
                            android:text="@string/yet"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/textColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_bold"
                    android:paddingHorizontal="20dp"
                    android:text="@string/maghrib"
                    android:textColor="@color/textColor"
                    android:textSize="24sp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="24dp"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:id="@+id/bg_maghrib"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gr_yet">

                        <TextView
                            android:id="@+id/tv_maghrib"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="?selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:fontFamily="@font/roboto_semi_bold"
                            android:gravity="center"
                            android:paddingHorizontal="20dp"
                            android:text="@string/yet"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/textColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_bold"
                    android:paddingHorizontal="20dp"
                    android:text="@string/isha"
                    android:textColor="@color/textColor"
                    android:textSize="24sp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="24dp"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:id="@+id/bg_isha"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gr_yet">

                        <TextView
                            android:id="@+id/tv_isha"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="?selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:fontFamily="@font/roboto_semi_bold"
                            android:gravity="center"
                            android:paddingHorizontal="20dp"
                            android:text="@string/yet"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>